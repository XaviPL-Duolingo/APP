<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.perfil.PerfilFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="325dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/answer_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bgRanking"
        android:layout_width="165dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/subcategory_icon"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/bgMail" />

    <ImageView
        android:id="@+id/bgMail"
        android:layout_width="165dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/subcategory_icon"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/bgUsername"
        android:layout_width="165dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/subcategory_icon"
        app:layout_constraintBottom_toTopOf="@+id/bgMail"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/iconRanking"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="7dp"
        android:src="@drawable/league_icon"
        app:layout_constraintBottom_toBottomOf="@+id/bgRanking"
        app:layout_constraintStart_toStartOf="@+id/bgRanking"
        app:layout_constraintTop_toTopOf="@+id/bgRanking" />

    <ImageView
        android:id="@+id/iconMail"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="7dp"
        android:src="@drawable/mail_icon"
        app:layout_constraintBottom_toBottomOf="@+id/bgMail"
        app:layout_constraintStart_toStartOf="@+id/bgMail"
        app:layout_constraintTop_toTopOf="@+id/bgMail" />

    <ImageView
        android:id="@+id/iconUsername"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="7dp"
        android:src="@drawable/username_icon"
        app:layout_constraintBottom_toBottomOf="@+id/bgUsername"
        app:layout_constraintStart_toStartOf="@+id/bgUsername"
        app:layout_constraintTop_toTopOf="@+id/bgUsername" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/duolingo_medium"
        android:text="#USERNAME"
        android:textAlignment="viewStart"
        android:textColor="#F8F6F6"
        app:layout_constraintBottom_toBottomOf="@+id/bgUsername"
        app:layout_constraintStart_toEndOf="@+id/iconUsername"
        app:layout_constraintTop_toTopOf="@+id/bgUsername" />

    <TextView
        android:id="@+id/tvMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/duolingo_medium"
        android:text="#EMAIL"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/bgMail"
        app:layout_constraintStart_toEndOf="@+id/iconMail"
        app:layout_constraintTop_toTopOf="@+id/bgMail" />

    <TextView
        android:id="@+id/tvRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/duolingo_medium"
        android:text="#RANKING"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/bgRanking"
        app:layout_constraintStart_toEndOf="@+id/iconRanking"
        app:layout_constraintTop_toTopOf="@+id/bgRanking" />

</androidx.constraintlayout.widget.ConstraintLayout>