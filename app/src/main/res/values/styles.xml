<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TranslucentStatusBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:navigationBarColor">#1d1830</item>
        <item name="android:windowBackground">@drawable/gradient_bg</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">#5000C8</item>
        <item name="android:navigationBarColor">#5000C8</item>
    </style>

    <style name="CircularProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_category</item>
    </style>
</resources>